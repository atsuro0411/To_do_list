　<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">投稿する</h1>
    <%= form_with model: @post do |form| %>
      <div class="form">
        <div class="form-body">
          <div class="form-field">
            <%= form.text_area :content %>
          </div>
          <div class="form-submit">
            <%= form.submit "投稿" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
