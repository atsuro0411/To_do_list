<body class = "regisrations-new-top">  
  <div class = "regisrations-new"> 
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class = "text">
      <span>新規登録</span>
    </div>
    <div class = "new-box">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :名前 , class: "text-label"%><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name" , class: "text-form"%>
        </div>
        <div class="field">
          <%= f.label :Eメール , class: "text-label"%><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "text-form"%>
        </div>
        <div class="field">
          <%= f.label :パスワード , class: "text-label"%>
          <% if @minimum_password_length %>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" , class: "text-form"%>
        </div>
        <div class="field">
          <%= f.label :パスワードの確認 , class: "text-label"%><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: "text-form"%>
        </div>
        <div class="actions">
          <%= f.submit "登録" , class:"submit-button"%>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</body>