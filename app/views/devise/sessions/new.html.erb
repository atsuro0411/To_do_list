<body class = "sessions-new-top">
  <div class = "sessions-new">  
    <div class="text">
      <span>ログイン</span>
    </div>
    <div class = "new-box">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :Eメール  , class: "text-label"%><br />
          <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "text-form" %>
        </div>

        <div class="field">
          <%= f.label :パスワード , class: "text-label"%><br />
          <%= f.password_field :password, autocomplete: "current-password" , class: "text-form" %>
        </div>

        <div class="actions">
          <%= f.submit "ログイン" , class:"submit-button"%>
        </div>
      <% end %>
    <%= render "devise/shared/links" %>
    </div>
  </div>
</body>