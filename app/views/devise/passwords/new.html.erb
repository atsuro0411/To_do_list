<body class = "passwords-new-top">
  <div class = "passwords-new"> 
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="text">  
      <span>パスワードをお忘れですか？</span>
    </div>
    <div class = "new-box"> 
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      

        <div class="field">
          <%= f.label :メールアドレス , class: "text-label"%><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "text-form" %>
        </div>

        <div class="actions">
          <%= f.submit "送信" , class:"submit-button" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</body>